{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "components": ["components"]
    },
    "noEmit": true,
      "allowJs": true,
      "sourceMap": true,
      "strict": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "module": "es6",
      "target": "ES6",
      "moduleResolution": "Node",
      "jsx": "react",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
  },
    "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}